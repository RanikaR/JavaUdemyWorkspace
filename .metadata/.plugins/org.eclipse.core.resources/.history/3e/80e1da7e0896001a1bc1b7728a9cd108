package codingexercises;

public class DecimalComparator {
	
	public static void areEqualByThreeDecimalPlaces(double firstNum, double secondNum) {
		firstNum = Math.round(firstNum * 1000.000) / 1000.000;
		secondNum = Math.round(secondNum * 1000.000) / 1000.000;
		System.out.println(firstNum + " " + secondNum);
		
		if (firstNum == secondNum) {
			return true;
		}
	
	}
	
	public static void main(String[] args) {
		
		areEqualByThreeDecimalPlaces(3.564, 3.563989);
		
	}

}
