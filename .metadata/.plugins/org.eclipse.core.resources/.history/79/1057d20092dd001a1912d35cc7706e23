package section4;

public class AreaCalculator {
	
	public static void main(String[] args) {
		System.out.println(area(-1));
	}
	
	public static double area(double radius) {
		double result = 0.0;
		
		if (radius < 0) {
			return -1.0;
		} else {
			result = radius * radius * Math.PI;
			return result;
		}
		
		
	}

}
