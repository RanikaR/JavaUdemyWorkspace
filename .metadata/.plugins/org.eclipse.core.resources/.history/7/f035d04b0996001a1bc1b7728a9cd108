package codingexercises;

public class DecimalComparator {
	
	public static boolean areEqualByThreeDecimalPlaces(double firstNum, double secondNum) {
//		firstNum = Math.floor(firstNum * 1000.000) / 1000.000;
//		secondNum = Math.floor(secondNum * 1000.000) / 1000.000;
//		System.out.println(firstNum + " " + secondNum);
		
		double result = firstNum / 3;
		result = Math.floor(result);
		result *= 3;
		System.out.println(result);
		
		if (firstNum == secondNum) {
			return true;
		} else {
			return false;
		}	
	
	}
	
	public static void main(String[] args) {
		
		System.out.println(areEqualByThreeDecimalPlaces(-3.1756, -3.175)); // true
		System.out.println(areEqualByThreeDecimalPlaces(3.175, 3.176)); // false
		System.out.println(areEqualByThreeDecimalPlaces(3.0, 3.0)); // true
		System.out.println(areEqualByThreeDecimalPlaces(-3.123, 3.1723)); // false
		
		
	}

}
