package codingexercises;

import java.text.DecimalFormat;

public class DecimalComparator {
	
	public static boolean areEqualByThreeDecimalPlaces(double firstNum, double secondNum) {

		DecimalFormat df = new DecimalFormat("#.###");
		firstNum = Double.valueOf(df.format(firstNum));
		secondNum = Double.valueOf(df.format(secondNum));
		
		if (firstNum == secondNum) {
			return true;
		} else {
			return false;
		}
	
	}
	
	public static void main(String[] args) {
		
		System.out.print(areEqualByThreeDecimalPlaces(-3.1756, -3.175)); // true
		System.out.print(areEqualByThreeDecimalPlaces(3.175, 3.176)); // false
		System.out.print(areEqualByThreeDecimalPlaces(3.0, 3.0)); // true
		System.out.print(areEqualByThreeDecimalPlaces(-3.123, 3.1723)); // false
		
		
	}

}
