package codingexercises;

public class DecimalComparator {
	
	public static void areEqualByThreeDecimalPlaces(double firstNum, double secondNum) {
		firstNum = Math.round(firstNum * 1000d);
		secondNum = Math.round(secondNum * 1000d);
		System.out.println(firstNum + " " + secondNum);
	
	}
	
	public static void main(String[] args) {
		
		areEqualByThreeDecimalPlaces(3.564, 3.5639);
		
	}

}
